extends baseEmail

block content
  p Hi #{firstName},
  p You have a new leave request to review from #{userName}.
  p 
    strong Leave Type: 
    | #{leaveType}
  p 
    strong Dates: 
    | #{startDate} to #{endDate}
  p 
    strong Reason: 
    | #{reason}
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Review Leave Request
  p If you didn't request this leave, please ignore this email!